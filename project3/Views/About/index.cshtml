@model Project3_Base_Code.ViewModels.AboutVM

<h2>@Model.Title</h2>

@for (var i = 0; i < Model.About.Count; i++)
{
<div class="container">

    <div class="row">

            
                <div class="caption">
                    <h3 style="font-size:small">
                        @Model.About[i].Title
                    </h3>
                    <h3 style="font-size:small">
                        @Model.About[i].Description
                    </h3>
                    <h3 style="font-size:small">
                        @Model.About[i].Quote
                    </h3>
                    <h3 style="font-size:small">
                        @Model.About[i].QuoteAuthor
                    </h3>
                </div>
                
                  
        
            </div>

    </div>
    i = i + 3;
}